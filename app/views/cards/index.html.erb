<div id="row">
  <table class="table">
    <tr>
      <td><b>Оригинальный текст</b></td>
      <td><b>Перевод</b></td>
      <td><b>Дата просмотра</b></td>
      <td><b>Создано</b></td>
      <td><b>Обновлено</b></td>
      <td><b>Действия</b></td>
    </tr>
    </div>
      <% @cards.each do |card| %>
        <tr>
          <td><%= card.origin_text %></td>
          <td><%= card.translated_text %></td>
          <td><%= card.review_date.strftime("%d/%m/%y") %></td>
          <td><%= card.created_at.strftime("%d/%m/%y - %H:%M:%S") %></td>
          <td><%= card.updated_at.strftime("%d/%m/%y - %H:%M:%S") %></td>
          <td><%= link_to "Редактировать", edit_card_path(card), class: "btn btn-warning" %></td>
          <td><%= link_to "Удалить", card, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
</div>
