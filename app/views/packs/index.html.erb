<div class="row">
  <ul class="nav nav-pills">
    <li><%= link_to "Добавить колоду", new_pack_path, id: "new_pack" %></li>
    <li><%= link_to "Сбросить колоды", profile_reset_current_pack_path(current_user), id: "reset" %></li>
  </ul>
  <table class="table">
    <tr>
      <td><b>Изображение</b></td>
      <td><b>Название</b></td>
      <td><b>Количество карточек</b></td>
      <td><b>Действия</b></td>
    </tr>
    </div>
      <% @packs.each do |pack| %>
        <tr class="<%= pack == current_user.current_pack ? 'current_pack' : 'inactive_pack' %>">
            <td><%= image_tag pack.image.url(:thumb) %></td>
            <td><%= pack.name %></td>
            <td><%= pack.cards.count %></td>
            <td><%= link_to "Выбрать", pack_set_current_pack_path(pack), class: "btn btn-success", method: :post %></td>
            <td><%= link_to "Просмотр", pack, class: "btn btn-primary" %></td>
            <td><%= link_to "Редактировать", edit_pack_path(pack), class: "btn btn-warning", id: "edit_pack" %></td>
            <td><%= link_to "Удалить", pack, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger", id: "delete_pack" %></td>
          </tr>
      <% end %>
</div>
