<h1>Изменить данные профиля</h1>
<%= bootstrap_form_for current_user, url: profile_path do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :email, label: "Email" %>
  <%= f.password_field :password, label: "Пароль" %>
  <%= f.password_field :password_confirmation, label: "Подтверждение пароля" %>
  <%= f.file_field :image, label: "Аватар" %>
  <%= f.submit "Обновить", class: "btn btn-success" %>
  <%= link_to 'Назад', cards_path, class: "btn btn-default" %>
<% end %>
