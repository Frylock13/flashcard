<div class="row">
  <ul class="nav nav-pills">
    <li><%= link_to "Изменить профиль", edit_profile_path %></li>
  </ul>
</div>
<div class="row">
  <div class="col-md-3 avatar">
    <%= image_tag current_user.image.url(:medium) %>
  </div>
  <div class="col-md-9 statistic">
    <ul class="list-group">
      <li class="list-group-item">
        <span class="badge"><%= current_user.packs.count %></span>
        Всего колод:
      </li>
      <li class="list-group-item">
        <span class="badge"><%= current_user.cards.count %></span>
        Всего карточек:
      </li>
      <li class="list-group-item">
        <span class="badge"><%= current_user.cards.for_review.count %></span>
        Доступно для тренировок:
      </li>
      <li class="list-group-item">
        <span class="badge"><%= (Date.today - current_user.created_at.to_datetime).to_i %> дней</span>
        Зарегистрирован уже:
      </li>
    </ul>
  </div>
</div>
