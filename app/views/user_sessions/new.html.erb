<h1>Войти</h1>

<%= form_tag user_sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag "Запомнить меня" %>
  </div>
  <div class="actions">
    <%= submit_tag "Войти", class: "btn btn-success" %>
    <%= link_to 'На главную', root_path, class: "btn btn-default" %>
  </div>
<% end %>
